<div class="page-banner">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="page-banner-heading">Freshen up with your summertime memories</h1>
                <p class="page-banner-text">Sign up to get 25% off on your first order</p>
                <p>
                    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#signupModal">Sign up now</button>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="signupModalTitle">Sign up to get 25% off on your first order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="userName" class="col-form-label">Name</label>
                        <input type="email" class="form-control" id="userName" />
                    </div>
                    <div class="form-group">
                        <label for="userEmail" class="col-form-label">Email</label>
                        <input type="text" class="form-control" id="userEmail" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Sign-up</button>
            </div>
        </div>
    </div>
</div>
